<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.tabs.TabLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tab_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <com.google.android.material.tabs.TabItem
        android:id="@+id/tab_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_gallery" />

    <com.google.android.material.tabs.TabItem
        android:id="@+id/tab_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_color" />

    <com.google.android.material.tabs.TabItem
        android:id="@+id/tab_color2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_color2" />

    <com.google.android.material.tabs.TabItem
        android:id="@+id/tab_color3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_color3" />
</com.google.android.material.tabs.TabLayout>